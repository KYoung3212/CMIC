<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.2.0+</version>
	</compatibility>
	<theme id="cmic-broker-theme" name="CMIC Broker Theme">
		<template-extension>ftl</template-extension>
		<layout-templates>
			<custom>
				<layout-template id="cmic_2_columns_25_75" name="CMIC 2 Columns 25 75">
					<template-path>/layoutftl/custom/cmic_2_columns_25_75.ftl</template-path>
					<thumbnail-path>/layoutftl/custom/cmic_2_columns_25_75.png</thumbnail-path>
				</layout-template>
				<layout-template id="cmic_2_columns_66_33" name="CMIC 2 Columns 66 33">
					<template-path>/layoutftl/custom/cmic_2_columns_66_33.ftl</template-path>
					<thumbnail-path>/layoutftl/custom/cmic_2_columns_66_33.png</thumbnail-path>
				</layout-template>
				<layout-template id="cmic_2_columns_75_25" name="CMIC 2 Columns 75 25">
					<template-path>/layoutftl/custom/cmic_2_columns_75_25.ftl</template-path>
					<thumbnail-path>/layoutftl/custom/cmic_2_columns_75_25.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
		<settings>
			<setting configurable="true" key="greeting" type="text" value="Hi, [FIRST_NAME]." />
			<setting configurable="true" key="greeting-message" type="text" value="We're here to serve you." />
		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
